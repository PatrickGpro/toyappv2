<p id="notice"><%= notice %></p>
<h1>Użytkownicy</h1>
<table>
  <thead>
    <tr>
      <th>Imie</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Pokaz', user,class: 'pokaz' %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user),class: 'edytuj' %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Czy napewno chcesz usun?' },class: 'usun' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Utwórz nowego użytkownika', new_user_path, class: 'new-user' %>

